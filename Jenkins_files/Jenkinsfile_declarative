pipeline {
    agent {
        label 'zip-job-docker'
        docker {
            image 'your/docker-image-name'
            args '-u root:root'
        }
    }
    stages {
        stage('Build') {
            steps {
                script {
                    sh 'python zip_job.py'
                }
            }
        }
        stage('Publish') {
            when {
                success
            }
            steps {
                withArtifacts([includePatterns: '*.zip']) {
                    artifactoryPublish (
                        serverId: 'artifactory-xx',
                        repoKey: "store-artifacts/${env.VERSION}",
                        user: 'superman',
                        password: 'P@ssw0rd123$',
                        useSpecs: true,
                        specs: [
                            [file: 'artifactory.json']
                        ]
                    )
                }
                def buildInfo = Artifactory.newBuildInfo()
                buildInfo.env.capture = true
                buildInfo.env.add("VERSION", env.VERSION)
                buildInfo.env.add("BUILD_NUMBER", env.BUILD_NUMBER)
                buildInfo.env.add("JOB_NAME", env.JOB_NAME)
                buildInfo.env.add("BUILD_URL", env.BUILD_URL)
                buildInfo.env.add("JENKINS_URL", env.JENKINS_URL)
                Artifactory.publishBuildInfo buildInfo
            }
        }
        stage('Report') {
            when {
                success
            }
            steps {
                emailext (
                    subject: "Job ${env.JOB_NAME} (${env.BUILD_NUMBER}) status: SUCCESS",
                    to: "requestor@email.com",
                )
            }
        }
        stage('Cleanup') {
            steps {
                deleteDir()
            }
        }
    }
}
